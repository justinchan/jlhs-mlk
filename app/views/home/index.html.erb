<style>
input.button {
	margin-bottom: 12px;
}
input {
	float:left;
	margin-right: 10px;
}
label.email.optional {
  display: none;
}

label.password.optional {
  display: none;
}

* {
  -webkit-border-radius: 0 !important;
     -moz-border-radius: 0 !important;
          border-radius: 0 !important;
}


.hero-unit {
  color: #fff;
  background: url('assets/mlk.jpg') repeat center center;
  opacity: 0.65;
}






</style>
<div class="hero-unit">
  <div class="container">
    <h1>MLK Registration 2014</h1>
    <p>James Logan High School</p>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-inline' }) do |f| %>
   		<%= f.input :email, :required => false, :autofocus => true, :placeholder=>"Email" %>
          <%= f.input :password, :required => false, :placeholder=>"Password" %>
  		<%= f.button :submit, "Sign in", :class=>"btn btn-primary" %>
    <% end %>
  </div>
</div>
